<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:b="sap.suite.ui.commons"                                                                                                                                 
		xmlns:smartField="sap.ui.comp.smartfield" xmlns:u="sap.ui.unified">                                                                                                                                                                                          
    <Dialog class="sapUiPopupWithPadding" title="{i18n>rejectDialogTitle}" resizable="false" draggable="false" showHeader="false"                                                                                                                              
        horizontalScrolling="false" contentWidth="850px">                                                                                                                                                                                                      
        <content>                                                                                                                                                                                                                                              
            <form:SimpleForm title="{i18n>rejectDialogTitle}">                                                                                                                                                                                                 
                <form:content>                                                                                                                                                                                                                                 
                    <Label text= '{i18n>rejectDialogTitle}'/>                                                                                                                                                                                                  
                    <Select id="reason" items="{                                                                                                                                                                                                               
                            path: 'ScreenControl>/Reason',                                                                                                                                                                                                     
                            sorter: { path: 'SalesDocumentRjcnReason' }                                                                                                                                                                                        
                        }">                                                                                                                                                                                                                                    
                        <items>                                                                                                                                                                                                                                
                            <core:Item text="{ScreenControl>SalesDocumentRjcnReasonName}" key="{ScreenControl>SalesDocumentRjcnReason}"/>                                                                                                                      
                        </items>                                                                                                                                                                                                                               
                    </Select>                                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
                </form:content>                                                                                                                                                                                                                                
            </form:SimpleForm>                                                                                                                                                                                                                                 
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button text="{i18n>yesBtn}" type="Emphasized" id="btnUpload" press="onRejectDialogPress"/>                                                                                                                                                        
            <Button text="{i18n>noBtn}" type="Emphasized" id="btnCancel" press="onRejectCancel"/>                                                                                                                                                              
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>                                                                                                                                                                                                                                     