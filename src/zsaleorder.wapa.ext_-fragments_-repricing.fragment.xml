<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:b="sap.suite.ui.commons"                                                                                                                                 
    xmlns:u="sap.ui.unified">                                                                                                                                                                                                                                  
    <Dialog class="sapUiPopupWithPadding" title="{i18n>rePricingDialogTitle}" resizable="false" draggable="false" showHeader="false"                                                                                                                           
        horizontalScrolling="false" contentWidth="850px">                                                                                                                                                                                                      
        <content>                                                                                                                                                                                                                                              
            <form:SimpleForm title="{i18n>rePricingDialogTitle}">                                                                                                                                                                                              
                <form:content>                                                                                                                                                                                                                                 
                    <Label text= '{i18n>rePricingDialogTitle}'/>                                                                                                                                                                                               
                    <DatePicker                                                                                                                                                                                                                                
                            id="Pricing_date"                                                                                                                                                                                                                  
                            value="{ScreenControl>/sPricing}" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd"                                                                                                                                                
                            change="handleChange"                                                                                                                                                                                                              
                            class="sapUiSmallMarginBottom"/>                                                                                                                                                                                                   
                </form:content>                                                                                                                                                                                                                                
            </form:SimpleForm>                                                                                                                                                                                                                                 
        </content>                                                                                                                                                                                                                                             
        <buttons>                                                                                                                                                                                                                                              
            <Button text="{i18n>yesBtn}" type="Emphasized" id="btnApprove" press="onPricingApprove"/>                                                                                                                                                          
            <Button text="{i18n>noBtn}" type="Emphasized" id="btnApproveCancel" press="onPricingClose"/>                                                                                                                                                       
        </buttons>                                                                                                                                                                                                                                             
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>                                                                                                                                                                                                                                     